{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "out",
    "paths": {
      "@gs-testing": ["node_modules/gs-testing/export/index.ts"],
      "@gs-types": ["node_modules/gs-types/export/index.ts"],
      "@moirai": ["node_modules/moirai/export/index.ts"],
      "@nabu": ["node_modules/nabu/export/index.ts"],
      "@rxjs": ["node_modules/rxjs"],
      "@rxjs/operators": ["node_modules/rxjs/operators"],
      "@santa": ["node_modules/santa/export/index.ts"],
    },
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "target": "es6"
  },
  "include": [
    "src/**/*.ts",
    "node_modules/gs-testing/export/*.ts",
    "node_modules/gs-types/export/*.ts",
    "node_modules/moirai/export/*.ts",
    "node_modules/@types/gapi/*.ts"
  ]
}
