{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "out",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "target": "es6"
  },
  "include": [
    "src/**/*.ts",
    "declarations/gapi/gapi.d.ts",
    "declarations/grecaptcha/grecaptcha.d.ts",
    "declarations/gs-tools.d.ts",
    "declarations/x-tag.d.ts",
    "node_modules/gs-testing/export/*.ts",
    "node_modules/gs-types/export/*.ts",
    "node_modules/moirai/export/*.ts"
  ]
}