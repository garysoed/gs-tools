<!DOCTYPE html>
<html lang="en">
<head>
  <base href=".">

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="theme-color" content="#607D8B">

  <title>
    {{#ifCond model.name '==' project.name}}
      {{project.name}}
    {{else}}
      {{project.name}} &bull; {{model.name}}
    {{/ifCond}}
  </title>

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <!-- Angular -->
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular-animate.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular-aria.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular-messages.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular-route.min.js"></script>

  <!-- Angular Material -->
  <script src="https://ajax.googleapis.com/ajax/libs/angular_material/1.0.5/angular-material.min.js"></script>
  <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/1.0.5/angular-material.min.css">

  <!-- Fuse.js -->
  <script src="{{relativeURL "assets/js/fuse.js"}}"></script>

  <!-- Highlight.js -->
  <link rel="stylesheet" href="{{relativeURL "assets/css/monokai.css"}}">
  <script src="{{relativeURL "assets/js/highlight.pack.js"}}"></script>

  <!-- Custom CSS -->
  <link rel="stylesheet" href="{{relativeURL "assets/css/breadcrumb.css"}}">
  <link rel="stylesheet" href="{{relativeURL "assets/css/code.link.css"}}">
  <link rel="stylesheet" href="{{relativeURL "assets/css/default.css"}}">
  <link rel="stylesheet" href="{{relativeURL "assets/css/gettersetter.css"}}">
  <link rel="stylesheet" href="{{relativeURL "assets/css/hierarchy.css"}}">
  <link rel="stylesheet" href="{{relativeURL "assets/css/index.css"}}">
  <link rel="stylesheet" href="{{relativeURL "assets/css/main.css"}}">
  <link rel="stylesheet" href="{{relativeURL "assets/css/member.css"}}">
  <link rel="stylesheet" href="{{relativeURL "assets/css/member.declaration.css"}}">
  <link rel="stylesheet" href="{{relativeURL "assets/css/member.signatures.css"}}">
  <link rel="stylesheet" href="{{relativeURL "assets/css/member.sources.css"}}">
  <link rel="stylesheet" href="{{relativeURL "assets/css/navigation.css"}}">
  <link rel="stylesheet" href="{{relativeURL "assets/css/reflection.css"}}">
  <link rel="stylesheet" href="{{relativeURL "assets/css/toc.css"}}">
  <link rel="stylesheet" href="{{relativeURL "assets/css/typeParameters.css"}}">

  <!-- Custom js -->
  <script src="{{relativeURL "assets/js/search.js"}}"></script>
</head>
<body
    layout="column"
    ng-app="DocApp"
    ng-class="{'gs-default__hide-inherited': hideInherited}"
    ng-controller="RootCtrl">
  <section class="gs-default__header" layout="row" layout-align="space-between center">
    <div layout="column">
      <header>
        <h1 class="gs-default__project-name">
          <a href="{{relativeURL "index.html"}}">{{project.name}}</a>
        </h1>
      </header>
      <div>{{#with model}}{{> breadcrumb}}{{/with}}</div>
    </div>
    <div class="gs-default__search-container" flex layout="row" layout-align="end center">
      <md-button
          class="md-icon-button gs-default__search-button"
          ng-class="{'gs-default__search-button--active': isSearchActive}"
          ng-click="onSearchClick()">
        <md-icon>search</md-icon>
      </md-button>
      <md-autocomplete
          class="gs-default__search"
          md-selected-item="selectedItem"
          md-search-text="searchText"
          md-items="item in querySearch(searchText)"
          md-item-text="item.name"
          md-min-length="0"
          md-selected-item-change="onSelectedItemChange(item)"
          ng-class="{'gs-default__search--active': isSearchActive}"
          placeholder="Search ...">
        <md-item-template>
          <div md-highlight-text="searchText" md-highlight-flags="i">
            \{{item.parent}}.\{{item.name}}
          </div>
        </md-item-template>
      </md-autocomplete>
    </div>
  </section>

  <section flex layout="row">
    <section class="gs-default__navigation-bar md-body-1" layout="column">
      <md-content flex>
        <nav>
          {{#each navigation.children}}
            {{> navigation}}
          {{/each}}
        </nav>
        <md-divider></md-divider>
        <nav layout="column" layout-align="star end">
          <div layout="column">
            {{#each toc.children}}
              {{> toc.root }}
            {{/each}}
          </div>
        </nav>
      </md-content>
      <div class="gs-default__toggle">
        <md-switch ng-model="hideInherited">
          Hides inherited
        </md-switch>
      </div>
    </section>
    <md-content class="gs-default__content" flex>
      {{{contents}}}
    </md-content>
  </section>

  <script type="text/javascript">
    var BASE_URL = '{{relativeURL "./"}}';
    hljs.initHighlightingOnLoad();
    angular
        .module('DocApp', ['ngMaterial'])
        .config(function($mdIconProvider, $mdThemingProvider) {
          $mdIconProvider.defaultFontSet('material-icons');
          $mdThemingProvider
              .theme('default')
              .primaryPalette('blue-grey')
              .accentPalette('yellow', {
                'default': 'A700'
              });
        })
        .controller('RootCtrl', function($scope) {
          var isInit = false;
          var rows = typedoc.search.data.rows;
          var fuse = new Fuse(rows, {
            'keys': ['name']
          });

          $scope['hideInherited'] = true;
          $scope['isSearchActive'] = false;
          $scope['onSearchClick'] = function() {
            $scope['isSearchActive'] = !$scope['isSearchActive'];

            if ($scope['isSearchActive']) {
              var inputEl = document.querySelector('.gs-default__search input');
              inputEl.focus();
              if (!isInit) {
                inputEl.addEventListener('blur', function() {
                  $scope['isSearchActive'] = false;
                  $scope.$apply(function() {});
                });
                isInit = true;
              }
            }
          };
          $scope['onSelectedItemChange'] = function(item) {
            window.location = BASE_URL + '/' + item.url;
          };
          $scope['querySearch'] = function(query) {
            return fuse.search(query);
          };
        });
  </script>
</body>
</html>
