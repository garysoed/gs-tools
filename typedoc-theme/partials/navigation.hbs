<div class="gs-navigation__root {{#if isInPath}}gs-navigation__selected{{/if}}" layout="row">
  {{#if isVisible}}
    {{#if isLabel}}
      <li class="label {{cssClasses}}">
        <span>{{title}}</span>
      </li>
    {{else}}{{#if isGlobals}}
        <a class="gs-navigation__item gs-navigation__globals"
            href="{{relativeURL url}}">
          {{title}}
        </a>
    {{else}}
      {{#if isInPath}}
        <a class="gs-navigation__item gs-navigation__member" href="{{relativeURL url}}">
          {{title}}
        </a>
        {{#if children}}
          {{#each children}}
            {{> navigation}}
          {{/each}}
        {{/if}}
      {{else}}
        <a class="gs-navigation__item gs-navigation__member" href="{{relativeURL url}}">
          {{title}}
        </a>
      {{/if}}
    {{/if}}{{/if}}
  {{/if}}
</div>
